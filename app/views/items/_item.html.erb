<article class="app-item span12">
  <div class="row">
    <%= render "item_rank", :item => item, :vote => item.votes %>

    <div class="span2">
      <span style="display: block; width: 120px; height: 90px; background: white; border: 1px solid #eee; box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05)"></span>
    </div>
    
    <div class="span9">
      <header class="item-header">
        <h2 class="item-heading">
          <%= link_to item.name, item %>
        </h2>
      </header>
      
      <div class="item-body">
        <%= item.description %>
      </div>

      <footer class="item-footer">
        <%= format_date(item.created_at) %>
      </footer>
    </div>
  </div>
</article>